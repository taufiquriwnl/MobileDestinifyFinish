<!-- res/layout/activity_detail_gambar2.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gambarDetail2"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wisata2"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>

    <!-- GridLayout untuk elemen-elemen lain -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambarDetail2"
        android:layout_marginTop="-40dp"
        android:layout_weight="1"
        android:background="@drawable/card_top_rounded_loginpage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/namaTempatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orchid Forest Cikole"
                android:textSize="30sp"
                android:textColor="@color/secondary"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/ratingImage"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/iconstar" />

            <!-- Informasi tambahan -->
            <TextView
                android:id="@+id/deskripsiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an "
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fasilitasText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fasilitas: \n- Taman\n- Perpustakaan\n- Tempat Penitipan"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="left"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/hargaText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 30.000"
                    android:textSize="25sp"
                    android:textAlignment="textEnd"
                    android:textColor="#FF0000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_pesan_gambar2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PESAN"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/secondary"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </GridLayout>
</RelativeLayout>
